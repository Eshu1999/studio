rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Match the path where doctor licenses are uploaded.
    // The {userId} wildcard captures the user's unique ID from the path.
    match /doctor-licenses/{userId}/{allPaths=**} {
    
      // Allow read and write operations (uploads) only if the
      // authenticated user's ID (request.auth.uid) matches the
      // {userId} in the file path.
      // This ensures users can only upload files to their own folder.
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
